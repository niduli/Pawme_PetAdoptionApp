<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CategoryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlackButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoralButton">
        <item name="android:backgroundTint">@color/soft_coral</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/be_vietnam_pro</item>
        <item name="android:textSize">20sp</item>
    </style>







</resources>


