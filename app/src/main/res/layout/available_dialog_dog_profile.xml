<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_bg"
    android:gravity="center"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/imgDog"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:src="@drawable/sample_dog" />

    <TextView
        android:id="@+id/txtDogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtDogDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breed | Age | Needs"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnChooseFoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Fostering"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />
</LinearLayout>
