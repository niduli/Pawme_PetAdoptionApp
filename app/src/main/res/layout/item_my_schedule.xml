<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/be_vietnam_pro_extra_bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/taskTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_time_sample"
            android:textSize="14sp"
            android:textColor="#444444"
            android:fontFamily="@font/be_vietnam_pro" />

        <TextView
            android:id="@+id/taskLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_location_sample"
            android:textSize="14sp"
            android:textColor="#444444"
            android:fontFamily="@font/be_vietnam_pro" />

        <TextView
            android:id="@+id/taskStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_status_sample"
            android:textSize="14sp"
            android:textColor="#00796B"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/be_vietnam_pro" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/cancelButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="88dp"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:backgroundTint="#F44336"
                android:fontFamily="@font/be_vietnam_pro" />

            <Button
                android:id="@+id/startButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="88dp"
                android:text="@string/start"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2196F3"
                android:fontFamily="@font/be_vietnam_pro" />

            <Button
                android:id="@+id/completeButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="88dp"
                android:text="@string/complete"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50"
                android:fontFamily="@font/be_vietnam_pro" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
